doctype
html
  head
    title Recent Kilauea Volcano Tremors
    link(rel='stylesheet', href='stylesheets/screen.css') 
  body
    h1 Count of Kilauea Earthquake Magnitudes Since May&nbsp3,&nbsp2018
    p <br>
    div #{date}
    p <br>
    form(action="/" method="post")
      select(name="magnitude")
        option(value="5" selected="selected") 5
        option(value="4") 4
        option(value="3") 3
        option(value="2") 2
        option(value="1") 1
        option(value="0") 0
      input(type="submit" value="Submit")
    p <br>
    section(id="magnitude" class="ingrid")
      table(align="center" border=2)
        thead
          tr
            th Magnitude 
            th Count
        tbody
        - for (var i = 5; i >= -1; i-- )
            tr 
              td=maglabel[i === -1 ? 6 : i]
              td=magsize[i === -1 ? 6 : i]
      p <br>
    section(id="weekly" class="ingrid")
      table(align="center" border=2)
        thead
          tr
            th Week Beginning
            th Count
        tbody
        - for (var i = 0; i < weekcnt.length ; i++ )
            tr 
              td=weeklabel[i]
              td=weekcnt[i]
      p <br>
    section(id="map" class="mapgrid")
      img(src='./images/KilaueaMap.png')
